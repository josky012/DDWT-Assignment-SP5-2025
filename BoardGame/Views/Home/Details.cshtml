@using WebMatrix.Data;

@{
    var db = Database.Open("BoardGame");
    var id = Request["id"];

    var sql = "SELECT BGGID, Name, Description, YearPublished, " +
              "MinPlayers, MaxPlayers, MfgPlayTime, ComMinPlayTime, ComMaxPlayTime, " +
              "Family, imagePath " +
              "FROM BoardGame WHERE BGGID = @0";

    var game = db.QuerySingle(sql, id);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Board Game Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">
    <div class="container">

        @if (game == null)
        {
            <div class="alert alert-warning">Game not found.</div>
        }
        else
        {
            <div class="card mb-4">
                <img src="@game.imagePath" class="card-img-top" alt="@game.Name"
                     style="object-fit:cover;max-height:240px;">
                <div class="card-body">
                    <h3 class="card-title">@game.Name</h3>
                    <p class="card-text mb-1"><strong>Year Published:</strong> @(game.YearPublished ?? "—")</p>
                    <p class="card-text mb-1"><strong>Players:</strong> @game.MinPlayers - @game.MaxPlayers</p>
                    <p class="card-text mb-1">
                        <strong>Mfg Play Time:</strong> @(game.MfgPlayTime ?? "—")<br />
                        <strong>Com Play Time:</strong> @(game.ComMinPlayTime ?? "—") - @(game.ComMaxPlayTime ?? "—")
                    </p>
                    <p class="card-text mb-1"><strong>Family:</strong> @(game.Family ?? "—")</p>
                    <p class="card-text"><strong>Description:</strong><br />@(game.Description ?? "—")</p>
                </div>
            </div>

            <a href="/Views/Home/Index.cshtml" class="btn btn-outline-secondary">Back</a>
        }

    </div>
</body>
</html>